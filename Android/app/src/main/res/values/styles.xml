<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/mYellow</item>
    </style>
    <style name="myDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="editText" >
        <item name="android:textSize">13sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="logInButton" >
        <item name="android:colorAccent">@color/mYellow</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/bg_mgreen_button</item>
    </style>
    <style name="normalButton" >
        <item name="android:colorAccent">@color/mYellow</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/bg_mgreen_button</item>
    </style>
    <style name="drawerText" >
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="dialogTitle">
        <item name="android:background">@color/mGreen</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#1565C0</item>
        <item name="fab_colorPressed">#2272CD</item>
        <item name="fab_colorRipple">#62B2FF</item>
    </style>
    <style name="MenuButtonsSmall.Green">
        <item name="fab_colorNormal">#43A047</item>
        <item name="fab_colorPressed">#2E7D32</item>
        <item name="fab_colorRipple">#1B5E20</item>
    </style>
    <style name="MenuButtonsSmall.White">
        <item name="fab_colorNormal">#00000000</item>
        <item name="fab_colorPressed">#00000000</item>
        <item name="fab_colorRipple">#00000000</item>
    </style>

</resources>
