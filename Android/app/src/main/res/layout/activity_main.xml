<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/googleMap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            style="@style/normalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:onClick="onClick"
            android:text="Fit for me" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="#4427AE60"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/mapHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Heart : Perfect"
                android:textColor="#0000FF" />

            <TextView
                android:id="@+id/mapInAir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapHeart"
                android:text="IN-Air : Good"
                android:textColor="#00FF00" />

            <TextView
                android:id="@+id/mapOutAir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapInAir"
                android:text="OUT-AIR : BAD"
                android:textColor="#FF0000" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/openDrawerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:backgroundTint="@color/mGreen"
            android:onClick="onClick"
            android:src="@drawable/ic_menu_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/drawerUserTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@color/mGreen">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="User Information"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drawerUserLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/drawerUserTitle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drawerProfileImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_person_black_24dp" />

            <TextView
                android:id="@+id/drawerUsernameTextView"
                style="@style/drawerText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/drawerProfileImageView"
                android:layout_toRightOf="@+id/drawerProfileImageView"
                android:text="Sarah" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/drawerUserLayout"
            android:background="@color/mGreen" />

        <LinearLayout
            android:id="@+id/sensorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drawerUserLayout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/drawerHeartImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/drawerHeartIdTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sarah" />

                <TextView
                    android:id="@+id/drawerHeartMacTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sarah" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/drawerInAirImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/drawerInAirIdTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sarah" />

                <TextView
                    android:id="@+id/drawerInAirMacTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sarah" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/drawerOutAirImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/drawerOutAirIdTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sarah" />

                <TextView
                    android:id="@+id/drawerOutAirMacTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sarah" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/drawerChangePasswordTextView"
            android:background="@color/mGreen" />

        <TextView
            android:id="@+id/drawerChangePasswordTextView"
            style="@style/drawerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/separateLine0"
            android:text="Change Password" />

        <View
            android:id="@+id/separateLine0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/drawerLogOutTextView"
            android:background="@color/mGreen" />

        <TextView
            android:id="@+id/drawerLogOutTextView"
            style="@style/drawerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Sign out"
            android:onClick="onClick"/>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>