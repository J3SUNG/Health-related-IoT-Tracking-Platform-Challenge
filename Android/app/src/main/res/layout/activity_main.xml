<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/googleMap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="3dp"
            android:background="@drawable/bg_white"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/perfect" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/perfect" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="InAir" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/perfect" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OutAir" />
                </LinearLayout>


            </LinearLayout>

            <Button
                style="@style/normalButton"
                android:id="@+id/suiteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:onClick="onClick"
                android:text="Suite" />
        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/openDrawerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:backgroundTint="@color/mGreen"
            android:onClick="onClick"
            android:src="@drawable/ic_menu_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/drawerUserTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mGreen"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="User Information"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drawerUserLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/drawerUserTitle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drawerProfileImageView"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_person_black_24dp" />

            <TextView
                android:id="@+id/drawerUsernameTextView"
                style="@style/drawerText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/drawerProfileImageView"
                android:layout_toRightOf="@+id/drawerProfileImageView"
                android:textSize="20sp"
                android:gravity="bottom"
                android:text="Sarah" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/drawerUserLayout"
            android:background="@color/mGreen" />

        <LinearLayout
            android:id="@+id/sensorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drawerUserLayout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/drawerHeartImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/drawerHeartIdTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sarah" />

                <TextView
                    android:id="@+id/drawerHeartMacTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sarah" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/drawerInAirImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/drawerInAirIdTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sarah" />

                <TextView
                    android:id="@+id/drawerInAirMacTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sarah" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/drawerOutAirImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/drawerOutAirIdTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sarah" />

                <TextView
                    android:id="@+id/drawerOutAirMacTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sarah" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/drawerChangePasswordTextView"
            android:background="@color/mGreen" />

        <TextView
            android:id="@+id/drawerChangePasswordTextView"
            style="@style/drawerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/separateLine0"
            android:onClick="onClick"
            android:text="Change Password" />

        <View
            android:id="@+id/separateLine0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/drawerLogOutTextView"
            android:background="@color/mGreen" />

        <TextView
            android:id="@+id/drawerLogOutTextView"
            style="@style/drawerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="onClick"
            android:text="Sign out" />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>